<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.PáginaPrincipal"
             Title="Bem-vindo ao MauiAppHotel">

    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

        <Label 
            Text="Bem-vindo!"
            FontFamily="Kalam"           
            FontSize="32"
            HorizontalOptions="Center" />

        <Button
            Text="Fazer Contratação/Reserva"
            Clicked="OnContratacaoClicked"
            HorizontalOptions="Fill" />
        <Button
            Text="Sobre o Aplicativo"
            Clicked="OnSobreClicked"
            HorizontalOptions="Fill" />    

    </VerticalStackLayout>
</ContentPage>